@model EmployeeCRUD.Models.Employee
@{
    ViewData["Title"] = "Details";
    var images = "Image/" + Model.Path;
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center text-info">Employee Details</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 text-center p-4">
                            <div><img src="~/@images" alt=" Employee Image" style="width:100px;height:100px;border:1px solid red;border-radius:50px;padding:10px;" /></div>
                            <div>Id : <em><b>@Model.Id</b></em></div>
                            <div>Name : <em><b>@Model.Name</b></em></div>
                            <div>Age : <em><b>@Model.Age</b></em></div>
                        </div>
                        <div class="col-6">
                            <div class="text-info">Others</div><hr />
                            <div>Salary : @Model.Salary</div>
                            <div>Gender : @Model.Gender</div>
                            <div>Blood Group : @Model.BloodGroup</div>
                            <div>Designation : @Model.Designations.Name</div>
                            <div>Department :  @Model.Departments.Name</div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a class="btn btn-sm btn-success m-2" asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a asp-action="Index" class="btn btn-sm btn-primary float-end text-light m-2 p-2">Back To List</a>
                </div>
            </div>
        </div>
    </div>

</div>

