@using EmployeeCRUD.Enum;

@model EmployeeCRUD.Models.Employee

@{
    ViewData["Title"] = "Edit";
    var images = "Image/" + Model.Path;
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2 border border-4 rounded rounded-3 p-4">
            <h3 class="text-info p-2 m-1 text-center">Update Employee</h3>
            <form method="post" asp-action="Edit" asp-controller="Employee" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
                <div class="form-check">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter Your Name" />
                    <input asp-for="Id" type="hidden" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-check">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" placeholder="Enter Your Age" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <label asp-for="Salary" class="control-label"></label>
                    <input asp-for="Salary" class="form-control" placeholder="Enter Your Salary" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <label asp-for="Gender" class="control-label"></label>
                    <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Genders>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <label asp-for="BloodGroup" class="control-label"></label>
                    <select asp-for="BloodGroup" class="form-control" asp-items="Html.GetEnumSelectList<BloodGroups>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="BloodGroup" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <label class="control-label">Designation</label>
                    <select asp-for="Designation" class="form-control" asp-items="ViewBag.Designation">
                        <option value="">--Select Designation--</option>
                    </select>
                    <span asp-validation-for="Designation" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <label class="control-label">Department</label>
                    <select asp-for="Department" class="form-control" asp-items="ViewBag.Department">
                        <option value="">--Select Department--</option>
                    </select>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
                <br />
                <div class="row p-4">
                    <div class="col-8">
                        <label asp-for="ImagePath"></label>
                        <input type="file" class="form-control" asp-for="ImagePath" id="ChooseImg" />
                    </div>
                    <div class="col-4">
                        <img src="~/@images" style="width:150px;height:150px;border:1px solid red;border-radius:10px;padding:10px" alt="Employee Images" id="PreviewImg" />
                    </div>
                </div>
                <br />
                <div class="form-check m-2">
                    <input type="submit" value="Update" class="btn btn-group-sm btn-primary float-end" />
                    <a asp-action="Index" class="btn btn-sm btn-warning p-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); // It is use for validation message hide when user input value
        <script src="~/js/preview.js"></script>
    }
}










